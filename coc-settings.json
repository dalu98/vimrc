{
  "coc.preferences.extensionUpdateCheck": "weekly",

  "suggest.minTriggerInputLength": 2,

  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },

  "explorer.icon.enableNerdfont": true,
  "explorer.icon.enableVimDevicons": true,
  "explorer.sources": [
    {
      "name": "buffer",
      "expand": false
    },
    {
      "name": "file",
      "expand": true
    }
  ],
  "explorer.presets": {
    "floating": {
      "position": "floating"
    }
  },

  "snippets.userSnippetsDirectory": "~/.vim/snippets"
}
